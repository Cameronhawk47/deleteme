pipeline {
    agent any 


    stages {
        stage('Login, Build and Push'){
            steps{
                withDockerRegistry(credentialsId: 'Docker'){
                     docker.build('cameronhawk47/flaskapp').push('latest')
                    }
                }
            }
        }
        stage('AWS Commands'){
            steps {
                script {
                    // sign into AWS
                    withAWS(credentials: 'AWS_Credentials', region: 'us-east-1'){
                        sh 'aws sts get-caller-identity'
                    }
                }
            }
        }
    }
}